<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage 
    x:Class="PiWord.AppTabbedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    android:TabbedPage.ToolbarPlacement="Bottom"
    xmlns:pages="clr-namespace:PiWord.Pages">

    <NavigationPage Title="Home" IconImageSource="{StaticResource TabOne}">
        <x:Arguments>
            <pages:HomePage Title="Home" />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Favorites" IconImageSource="{StaticResource TabTwo}">
        <x:Arguments>
            <pages:FavoritesPage Title="Favorites" />
        </x:Arguments>
    </NavigationPage>
</TabbedPage>